<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusId">ID</label>
    <div class="col-sm-8">
        <input autofocus class="form-control" name="cusId" required type="number" value="<%= customer.cusId %>"/>
    </div>
    <td>(Required)</td> 
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusFname">First Name</label>
    <div class="col-sm-7">
        <input class="form-control" name="cusFname" required type="text" value="<%= customer.cusFname %>" />
    </div>
    <td>(Required)</td> 
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusLname">Last Name</label>
    <div class="col-sm-7">
        <input class="form-control" name="cusLname" required type="text" value="<%= customer.cusLname %>" />
    </div>
    <td>(Required)</td> 
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusState">State</label>
    <div class="col-sm-7">
        <input class="form-control" name="cusState" type="text" maxlength="2" value="<%= customer.cusState %>" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusSalesYTD">Sales YTD</label>
    <div class="col-sm-7">
        <input class="form-control" name="cusSalesYTD" type="number" value="<%= customer.cusSalesYTD %>" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusSalesPrev">Previous Years Sales</label>
    <div class="col-sm-7">
        <input class="form-control" name="cusSalesPrev" type="number" value="<%= customer.cusSalesPrev %>" />
    </div>
</div>