<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusid">ID</label>
    <div class="col-sm-8">
        <input readonly class="form-control" name="cusid" id="cusid" value="<%= customer.cusid %>"/> 
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusfname">First Name</label>
    <div class="col-sm-7">
        <input class="form-control" type="text" name="cusfname" required value="<%= customer.cusfname %>" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cuslname">Last Name</label>
    <div class="col-sm-7">
        <input class="form-control" type="text" name="cuslname" required value="<%= customer.cuslname %>" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusstate">State</label>
    <div class="col-sm-7">
        <input class="form-control" type="text" pattern="[A-Za-z]{2}" name="cusstate" value="<%= customer.cusstate %>" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cussalesytd">Sales YTD</label>
    <div class="col-sm-7">
        <input class="form-control" type="number" name="cussalesytd" value="<%= customer.cussalesytd %>" />
    </div>
</div>
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cussalesprev">Previous Years Sales</label>
    <div class="col-sm-7">
        <input class="form-control" type="number" name="cussalesprev" value="<%= customer.cussalesprev %>" />
    </div>
</div>

